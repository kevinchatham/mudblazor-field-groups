@inherits FieldBase<string, PasswordFieldModel, MudTextField<string>>

<MudTextField Label="@Label"
              Value="Model.Value"
              ValueChanged="async (string input)=> await Changed(input.Trim())"
              Validation="PasswordValidator.Validate"
              For="@(() => Model.Value)"
              Variant="Variant"
              InputType="InputType"
              Adornment="Adornment.End"
              AdornmentIcon="@PasswordInputIcon"
              OnAdornmentClick="TogglePasswordVisibility"
              Disabled="Disabled"
              Immediate="Immediate"
              Class="@Class"
              Style="@Style"
              @ref="Field" />

@if (Confirm)
{
    <MudTextField Label="@ConfirmLabel"
              Value="Model.ConfirmValue"
              ValueChanged="async (string input)=> await ConfirmChanged(input)"
              For="@(() => Model.ConfirmValue)"
              Variant="Variant"
              InputType="ConfirmInputType"
              Adornment="Adornment.End"
              AdornmentIcon="@ConfirmPasswordInputIcon"
              OnAdornmentClick="ToggleConfirmPasswordVisibility"
              Disabled="ConfirmDisabled"
              Immediate="Immediate"
              Class="@Class"
              Style="@Style"
              @ref="ConfirmField" />
}