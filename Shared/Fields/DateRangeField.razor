@inherits FieldBase<DateRange, DateRangeFieldModel, BaseValidator<DateRange>, MudFormComponent<DateRange, string>>

<MudDateRangePicker Label="@Label"
                    DateRange="Model.Value"
                    DateRangeChanged="async (DateRange input)=> await Changed(input)"
                    Required="true"
                    RequiredError="This is required."
                    Validation="_Validator.ValidateValue"
                    Variant="Variant"
                    Disabled="Disabled"
                    IsDateDisabledFunc="IsDateDisabled"
                    MinDate="MinDate"
                    MaxDate="MaxDate"
                    Class="@Class"
                    Style="@Style"
                    @ref="Picker">
    <PickerActions>
        <MudButton Class="mr-auto align-self-start"
                   OnClick="@(() => Picker.Clear())">Clear</MudButton>
        <MudButton OnClick="@(() => Picker.Close(false))">Cancel</MudButton>
        <MudButton Color="Color.Primary"
                   OnClick="@(() => Picker.Close())">Ok</MudButton>
    </PickerActions>
</MudDateRangePicker>
