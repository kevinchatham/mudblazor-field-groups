@inherits FieldBase<decimal,DiscountFieldModel, MudNumericField<decimal>>

<MudNumericField Label="@Label"
                 Value="Model.Value"
                 ValueChanged="async (decimal input)=> await Changed(input)"
                 For="@(() => Model.Value)"
                 Validation="Validator.Validate"
                 Variant="Variant"
                 Min="0"
                 Max="Max"
                 Adornment="Adornment.Start"
                 AdornmentIcon="@AdornmentIcon"
                 HideSpinButtons="true"
                 Disabled="Disabled"
                 Immediate="Immediate"
                 Class="@Class"
                 Style="@Style"
                 @ref="Field" />
<MudCheckBox Checked="@Model.IsFlatDiscount"
             Color="Color"
             CheckedChanged="(bool x)=>OnCheckedChanged(x)"
             For="@(()=>Model.IsFlatDiscount)"
             Label="Flat discount?"
             Class="@Class"
             Style="@Style"></MudCheckBox>