@inherits FieldBase<string, RoleFieldModel, NotEmptyValidator, MudSelect<string>>

<MudSelect Label="@Label"
           Value=Model.Value
           ValueChanged="(string input) => Changed(input)"
           For="@(() => Model.Value)"
           T="string"
           Strict="true"
           Variant="Variant"
           AnchorOrigin="Origin.BottomCenter"
           Validation="_Validator.ValidateValue"
           Disabled="Disabled"
           Immediate="Immediate"
           Class="@Class"
           Style="@Style"
           @ref="Field">
  <MudSelectItem T="string"
                 Value="@Roles.User" />
  <MudSelectItem T="string"
                 Value="@Roles.Admin" />
</MudSelect>
