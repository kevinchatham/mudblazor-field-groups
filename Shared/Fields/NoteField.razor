@inherits FieldBase<string, NoteFieldModel, MudTextField<string>>

<MudTextField Label="@Label"
              Value="Model.Value"
              ValueChanged="async (string input)=> await Changed(input.Trim())"
              Validation="Validator.Validate"
              For="@(() => Model.Value)"
              Variant="Variant"
              Disabled="Disabled"
              Immediate="Immediate"
              Lines="8"
              Class="@Class"
              Style="@Style"
              @ref="Field" />